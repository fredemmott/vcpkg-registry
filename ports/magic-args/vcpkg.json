{
  "name": "magic-args",
  "version-semver": "0.2.1",
  "description": "Ease-of-use-first argument parsing for C++23",
  "homepage": "https://github.com/fredemmott/magic_args",
  "license": "MIT",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "default-features": [
    "charset-conversion",
    "magic-enum"
  ],
  "features": {
    "charset-conversion": {
      "description": "Support converting argv to UTF-8 on all platforms",
      "dependencies": [
        {
          "name": "libiconv",
          "platform": "!windows"
        }
      ]
    },
    "magic-enum": {
      "description": "Integration with magic_enum",
      "dependencies": [
        "magic-enum"
      ]
    }
  }
}
