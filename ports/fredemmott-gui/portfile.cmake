vcpkg_from_github(
  OUT_SOURCE_PATH SOURCE_PATH
  REPO fredemmott/fui
  REF e4a23da3999714666a72ff7b0872978abcfbe3ce
  SHA512 28d26df3647b4c1564946597ab77eaeed88342b08b48b1675167b076ddbad350de3f2fcf7847561410be071a28c5568cd91215dbb9892ea926f8c6d5759ed1a9
  HEAD_REF main
)

vcpkg_check_features(
  OUT_FEATURE_OPTIONS FEATURE_OPTIONS
  FEATURES
  direct2d ENABLE_DIRECT2D
  skia ENABLE_SKIA
)

vcpkg_cmake_configure(
  SOURCE_PATH "${SOURCE_PATH}"
  GENERATOR Ninja
  OPTIONS
  -DENABLE_IMPLICIT_BACKENDS=OFF
  -DENABLE_DEVELOPER_OPTIONS=OFF
  -DENABLE_DIRECT2D=${ENABLE_DIRECT2D}
  -DENABLE_SKIA=${ENABLE_SKIA}
)

vcpkg_cmake_install()

vcpkg_install_copyright(FILE_LIST "${SOURCE_PATH}/LICENSE" "${SOURCE_PATH}/third-party/microsoft-ui-xaml/LICENSE")
file(INSTALL "${CMAKE_CURRENT_LIST_DIR}/usage" DESTINATION "${CURRENT_PACKAGES_DIR}/share/${PORT}")
